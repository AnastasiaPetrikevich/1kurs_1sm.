#include <iostream>
using namespace std;
int main()
{
	while (true)
	{
		int n;
		cout << "Enter you number: "<< endl;
		cin >> n;
		int i = 0, a = 0;
		for (int i = 2; i < n; i++)
		{
			if (n % i == 0)
				a++;
		}
		if (a > 0)
			cout << n << " is not a prime number" << endl;
		else
			cout << n << " is a prime number" << endl;
		system("pause");
	}
	return 0;
}
